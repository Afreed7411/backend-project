<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
            <input type="text" class="block w-full rounded-md outline-none mt-2 bg-zinc-800" name="title" placeholder="Title goes">

            <textarea class="block w-full rounded-md outline-none mt-2 resize-none bg-zinc-800" name="details" placeholder="write your task here"></textarea>

            <input type="submit" class="mt-2 bg-blue-600 px-5 py-2 rounded-md" value="create Task">
</form>
        </div>
        <div class="Task flex gap-3 flex-wrap  p-10">

            <% if (files.length > 0) { %>
                <% files.forEach(function(val) { %>
                    <div class="task w-72 px-3 py-4 bg-zinc-800 p-10 rounded-md">
                        <h1 class="text-white text-3xl"> <%= val %></h1>
                        <a class="text-blue-500 inline-block mt-3" href="<%= val.url %>"> Read More</a>
                    </div>
                <% }); %>
            <% } else { %>
                <h1 class="text-zinc-600">No tasks yet.</h1>
            <% } %>
            



    
    </div>
    </div>
</body>
</html>
